<Controls:MetroWindow x:Class="eObecnosc_App.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="MainWindow"
                      Height="720"
                      Width="1280">
    <Grid x:Name="Widok">
        <Label x:Name="Etykieta_Logowanie" Content="Login:" HorizontalAlignment="Left" Margin="404,158,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Etykieta_Haslo" Content="Hasło:" HorizontalAlignment="Left" Margin="404,304,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Haslo" HorizontalAlignment="Left" Margin="404,369,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Przycisk_Zaloguj" Content="Zaloguj się" HorizontalAlignment="Left" Margin="404,450,0,0" VerticalAlignment="Top" Width="75" Click="Przycisk_Zaloguj_Click"/>
        <TextBox x:Name="Login" HorizontalAlignment="Left" Height="23" Margin="404,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>


</Controls:MetroWindow>
